{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
